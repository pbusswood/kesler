<div class="page-header">
  <h1>Questions</h1>
</div>

<%= link_to "Ask a Question", new_question_path, class: "btn btn-success" %>

<% @questions.each do |question| %>
  <div class="question">
    <div class="row">
      <div class="span12">
        <strong>My Name</strong>
        <p><%= question.title %></p>
        <div class="meta">
          <%= link_to time_ago_in_words(question.created_at) + " ago", question %>
          <span class="admin">
            | <%= link_to "Edit", edit_question_path(question) %> | <%= link_to "Delete", question, method: :delete, data: {confirm: "Are you sure you want to delete this question?"} %>
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>
